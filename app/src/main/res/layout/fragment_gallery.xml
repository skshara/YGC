<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment"
    android:orientation="vertical"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:background="@drawable/profilebk"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="425sp"
                                android:layout_height="412sp"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/circles"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/circles" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="166dp"
                                android:layout_height="149dp"
                                android:src="@drawable/usrbk"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/usrbk" />

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="49dp"
                                android:layout_height="46dp"
                                android:background="@android:color/transparent"
                                android:src="?attr/actionModeCloseDrawable"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="#FFFFFF" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="360dp"
                            android:layout_height="345dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="-70dp"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/userbkbo"
                            android:elevation="3dp"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="524dp"
                                android:layout_gravity="center">





                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/baloo_paaji"
                                    android:text="Your Details"
                                    android:textSize="24sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.085" />

                                <TextView
                                    android:id="@+id/item1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="32dp"
                                    android:fontFamily="@font/electrolize"
                                    android:text="Grade:"
                                    android:textColor="#000000"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                                    app:layout_constraintVertical_bias="0.095" />

                                <TextView
                                    android:id="@+id/detail1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/electrolize"
                                    android:text="Loading grade"
                                    android:textColor="#000000"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.506"
                                    app:layout_constraintStart_toEndOf="@+id/item1"
                                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                                    app:layout_constraintVertical_bias="0.095" />

                                <TextView
                                    android:id="@+id/item2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="32dp"
                                    android:fontFamily="@font/electrolize"
                                    android:text="User Name:"

                                    android:textColor="#000000"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/item1"
                                    app:layout_constraintVertical_bias="0.142" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/electrolize"
                                    android:text="Loading User name"

                                    android:textColor="#000000"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.462"
                                    app:layout_constraintStart_toEndOf="@+id/item2"
                                    app:layout_constraintTop_toBottomOf="@+id/detail1"
                                    app:layout_constraintVertical_bias="0.142" />

                                <TextView
                                    android:id="@+id/item3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="32dp"
                                    android:fontFamily="@font/electrolize"
                                    android:text="Email:"

                                    android:textColor="#000000"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/item2"
                                    app:layout_constraintVertical_bias="0.186" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/electrolize"
                                    android:text="Loading Email"
                                    android:textColor="#000000"

                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.465"
                                    app:layout_constraintStart_toEndOf="@+id/item3"
                                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                                    app:layout_constraintVertical_bias="0.188" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/back"
                    android:layout_width="195dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:text="EDIT the information" />

                <TextView
                    android:id="@+id/textGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:visibility="invisible"
                    tools:visibility="gone" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</LinearLayout>