<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CACACA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        android:background="@drawable/profilebk"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="User Email @"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.516"
                            app:layout_constraintStart_toEndOf="@+id/imageView4"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.423" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="425dp"
                            android:layout_height="412dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/userbkup"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/circles" />

                        <TextView
                            android:id="@+id/text_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:visibility="gone"
                            tools:layout_editor_absoluteX="8dp"
                            tools:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="166dp"
                            android:layout_height="149dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/images"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/usrbk" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="-70dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/userbkbo"
                        android:elevation="3dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/item6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="item 6"
                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/item5"
                                app:layout_constraintVertical_bias="0.411" />

                            <TextView
                                android:id="@+id/detail6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="detiails in item 6"
                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toEndOf="@+id/item6"
                                app:layout_constraintTop_toBottomOf="@+id/detail5"
                                app:layout_constraintVertical_bias="0.411" />

                            <TextView
                                android:id="@+id/detail5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="details in item 5"
                                android:textColor="#000000"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toEndOf="@+id/item4"
                                app:layout_constraintTop_toBottomOf="@+id/detail3"
                                app:layout_constraintVertical_bias="0.575" />

                            <TextView
                                android:id="@+id/item5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="Item 5"
                                android:textColor="#000000"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/item3"
                                app:layout_constraintVertical_bias="0.575" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/baloo_paaji"
                                android:text="Your Details"
                                android:textSize="24sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.085" />

                            <TextView
                                android:id="@+id/item1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:fontFamily="@font/electrolize"
                                android:text="Item 1"
                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView6"
                                app:layout_constraintVertical_bias="0.095" />

                            <TextView
                                android:id="@+id/detail1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/electrolize"
                                android:text="Detail about item 1"
                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.506"
                                app:layout_constraintStart_toEndOf="@+id/item1"
                                app:layout_constraintTop_toBottomOf="@+id/textView6"
                                app:layout_constraintVertical_bias="0.095" />

                            <TextView
                                android:id="@+id/item2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="Item 2"
                                android:fontFamily="@font/electrolize"

                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/item1"
                                app:layout_constraintVertical_bias="0.142" />

                            <TextView
                                android:id="@+id/detail2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="detail in item 2"
                                android:fontFamily="@font/electrolize"

                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.462"
                                app:layout_constraintStart_toEndOf="@+id/item2"
                                app:layout_constraintTop_toBottomOf="@+id/detail1"
                                app:layout_constraintVertical_bias="0.142" />

                            <TextView
                                android:id="@+id/item3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="Item 3"
                                android:fontFamily="@font/electrolize"

                                android:textColor="#000000"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/item2"
                                app:layout_constraintVertical_bias="0.186" />

                            <TextView
                                android:id="@+id/detail3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="detail in ittem 3"
                                android:textColor="#000000"
                                android:fontFamily="@font/electrolize"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.465"
                                app:layout_constraintStart_toEndOf="@+id/item3"
                                app:layout_constraintTop_toBottomOf="@+id/detail2"
                                app:layout_constraintVertical_bias="0.188" />

                            <TextView
                                android:id="@+id/item4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="item 4"
                                android:textColor="#000000"
                                android:fontFamily="@font/electrolize"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/item3"
                                app:layout_constraintVertical_bias="0.253" />

                            <TextView
                                android:id="@+id/detail4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="detail in item 4"
                                android:textColor="#000000"
                                android:fontFamily="@font/electrolize"

                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toEndOf="@+id/item4"
                                app:layout_constraintTop_toBottomOf="@+id/detail3"
                                app:layout_constraintVertical_bias="0.253" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

