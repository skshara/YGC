<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_2"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textofHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="40sp" />


            <TextView
                android:id="@+id/method_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/almendra_sc"
                android:text="Click any resources from the following"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />


            <LinearLayout
                android:id="@+id/cont_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/in_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/video"
                        android:layout_width="160dp"
                        android:layout_height="165dp"
                        android:background="@drawable/sml_bk"
                        android:clickable="true"

                        android:contentDescription="Videos"

                        android:longClickable="false"
                        android:src="@drawable/video" />

                    <ImageButton
                        android:id="@+id/e_book"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/sml_bk"
                        android:contentDescription="E book"
                        android:src="@drawable/e_bk"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inin_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtvideos"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:longClickable="false"
                        android:text="InteractiveVideos"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtebook"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:text="E-Book"


                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/cont_two"
                    android:layout_width="wrap_content"
                    android:layout_height="164dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/Audio"
                        android:layout_width="160dp"
                        android:layout_height="165dp"
                        android:background="@drawable/sml_bk"
                        android:contentDescription="Audio books"
                        android:src="@drawable/audio_bk"


                        />

                    <ImageButton
                        android:id="@+id/quiz"
                        android:layout_width="160dp"
                        android:layout_height="165dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/sml_bk"
                        android:contentDescription="quiz"
                        android:src="@drawable/homework"


                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ininin_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtaudio"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:longClickable="false"
                        android:text="Audio books"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txtquiz"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:text="Quizzes"


                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textpalin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/baloo_paaji"
                android:text="&quot;Get your Education Developed&quot;"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>